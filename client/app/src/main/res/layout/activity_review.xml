<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.ReviewActivity">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_32"
        android:layout_marginTop="@dimen/spacing_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@string/cd_back"
        android:focusable="true"
        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_24"
        android:fontFamily="@font/poppins_semibold"
        android:includeFontPadding="false"
        android:text="@string/review"
        android:textSize="@dimen/font_20"
        app:layout_constraintBottom_toBottomOf="@id/imgBack"
        app:layout_constraintStart_toEndOf="@id/imgBack"
        app:layout_constraintTop_toTopOf="@id/imgBack" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/vRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_24"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ratingAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_32"
                android:layout_marginEnd="@dimen/spacing_12"
                android:background="@drawable/bg_rating_selected"
                android:clickable="true"
                android:drawablePadding="@dimen/spacing_5"
                android:focusable="true"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/spacing_16"
                android:paddingVertical="@dimen/spacing_6"
                android:text="@string/all"
                android:textColor="@color/whiter"
                android:textSize="@dimen/font_11"
                app:drawableStartCompat="@drawable/ic_rating"
                app:drawableTint="@color/whiter" />

            <TextView
                android:id="@+id/rating5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_12"
                android:background="@drawable/bg_rating"
                android:clickable="true"
                android:drawablePadding="@dimen/spacing_5"
                android:focusable="true"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/spacing_16"
                android:paddingVertical="@dimen/spacing_6"
                android:text="@string/_5"
                android:textColor="@color/rating"
                android:textSize="@dimen/font_11"
                app:drawableStartCompat="@drawable/ic_rating"
                app:drawableTint="@color/rating" />

            <TextView
                android:id="@+id/rating4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_12"
                android:background="@drawable/bg_rating"
                android:clickable="true"
                android:drawablePadding="@dimen/spacing_5"
                android:focusable="true"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/spacing_16"
                android:paddingVertical="@dimen/spacing_6"
                android:text="@string/_4"
                android:textColor="@color/rating"
                android:textSize="@dimen/font_11"
                app:drawableStartCompat="@drawable/ic_rating"
                app:drawableTint="@color/rating" />

            <TextView
                android:id="@+id/rating3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_12"
                android:background="@drawable/bg_rating"
                android:clickable="true"
                android:drawablePadding="@dimen/spacing_5"
                android:focusable="true"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/spacing_16"
                android:paddingVertical="@dimen/spacing_6"
                android:text="@string/_3"
                android:textColor="@color/rating"
                android:textSize="@dimen/font_11"
                app:drawableStartCompat="@drawable/ic_rating"
                app:drawableTint="@color/rating" />

            <TextView
                android:id="@+id/rating2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_12"
                android:background="@drawable/bg_rating"
                android:clickable="true"
                android:drawablePadding="@dimen/spacing_5"
                android:focusable="true"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/spacing_16"
                android:paddingVertical="@dimen/spacing_6"
                android:text="@string/_2"
                android:textColor="@color/rating"
                android:textSize="@dimen/font_11"
                app:drawableStartCompat="@drawable/ic_rating"
                app:drawableTint="@color/rating" />

            <TextView
                android:id="@+id/rating1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_12"
                android:background="@drawable/bg_rating"
                android:clickable="true"
                android:drawablePadding="@dimen/spacing_5"
                android:focusable="true"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/spacing_16"
                android:paddingVertical="@dimen/spacing_6"
                android:text="@string/_1"
                android:textColor="@color/rating"
                android:textSize="@dimen/font_11"
                app:drawableStartCompat="@drawable/ic_rating"
                app:drawableTint="@color/rating" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/vReview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_32"
        android:layout_marginTop="@dimen/spacing_24"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vRating">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/rating"
            android:textSize="@dimen/font_16" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_4"
            android:drawablePadding="@dimen/spacing_4"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="@string/dummy_rating"
            android:textColor="@color/rating"
            app:drawableStartCompat="@drawable/ic_rating" />

        <TextView
            android:id="@+id/tvSumReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="@string/dummy_sum_review"
            android:textColor="@color/ic_gray"
            android:textSize="@dimen/font_10" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReviews"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="@dimen/spacing_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vReview"
        tools:listitem="@layout/item_review" />
</androidx.constraintlayout.widget.ConstraintLayout>